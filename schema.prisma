datasource mysql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "mysql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model LandingPage {
  id                String  @id @default(uuid())
  title             String  @default("")
  header            String  @default("")
  visi              String  @default("")
  misi              Json    @default("[]")
  avatar_filesize   Int?
  avatar_extension  String?
  avatar_width      Int?
  avatar_height     Int?
  avatar_id         String?
  someFile_filesize Int?
  someFile_filename String?
  about             String  @default("")
  portofolio        Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Post {
  id          String    @id @default(uuid())
  title       String    @default("")
  status      String?   @default("draft")
  content     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  tags        Tag[]     @relation("Post_tags")

  @@index([authorId])
}

model Career {
  id           String    @id @default(uuid())
  title        String    @default("")
  description  Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  Requirements Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  created_at   DateTime?
}

model Product {
  id               String  @id @default(uuid())
  gambar_filesize  Int?
  gambar_extension String?
  gambar_width     Int?
  gambar_height    Int?
  gambar_id        String?
  name             String  @default("")
  description      String  @default("")
}

model Tag {
  id    String @id @default(uuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}